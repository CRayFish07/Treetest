<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="normalText" parent="@android:style/TextAppearance">
		<item name="android:textColor">#444</item>
		<item name="android:textSize">15sp</item>
	</style>
	 <style name="MidText" parent="@android:style/TextAppearance">
		<item name="android:textColor">#444</item>
		<item name="android:textSize">17sp</item>
	</style>
	 <style name="largeText" parent="@android:style/TextAppearance">
		<item name="android:textColor">#444</item>
		<item name="android:textSize">20sp</item>
	</style>
	 <style name="biglargeText" parent="@android:style/TextAppearance">
		<item name="android:textColor">#444</item>
		<item name="android:textSize">25sp</item>
	</style>
	 <style name="BigText" parent="@android:style/TextAppearance">
		<item name="android:textColor">#444</item>
		<item name="android:textSize">25sp</item>
	</style>
	 <style name="BigMText" parent="@android:style/TextAppearance">
		<item name="android:textColor">#444</item>
		<item name="android:textSize">22sp</item>
	</style>
	 <style name="vertical_layout">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/domo_toolbar_bg</item> 
    </style>
    <style name="horizontal_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/filemanagermenubg_w</item> 
    </style>
  
    
    <!-- spinner -->
    <style name="spinner_stylemid">
    <item name="android:background">@drawable/spinner_selector</item>
    <item name="android:paddingLeft">5dip</item>
    <item name="android:textSize">20sp</item>
    </style>
    
    <style name="spinner_stylebig">
    <item name="android:background">@drawable/spinner_selector</item>
    <item name="android:paddingLeft">5dip</item>
    <item name="android:textSize">50sp</item>
    </style>
    <style name="spinner_stylesmall">
    <item name="android:background">@drawable/spinner_selector</item>
    <item name="android:paddingLeft">5dip</item>
    <item name="android:textSize">15sp</item>
    </style>
</resources>